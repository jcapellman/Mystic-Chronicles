<Page
    x:Class="MysticChronicles.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <Grid Background="Black">
        <canvas:CanvasControl x:Name="canvas" Draw="Canvas_Draw" CreateResources="Canvas_CreateResources"/>

        <!-- FF4 Style Status Box - Bottom Left -->
        <Border x:Name="statusBox"
                BorderBrush="White" 
                BorderThickness="3" 
                Background="#FF0000AA"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="400"
                Margin="20,0,0,20"
                Padding="15">
            <StackPanel>
                <TextBlock x:Name="txtGameState" Foreground="White" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI"/>
                <TextBlock x:Name="txtHeroStats" Foreground="White" FontSize="16" Margin="0,5,0,0" FontFamily="Segoe UI"/>
                <TextBlock x:Name="txtMessage" Foreground="Yellow" FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap" FontFamily="Segoe UI"/>
            </StackPanel>
        </Border>

        <!-- FF4 Style Battle Command Box - Bottom Right -->
        <Border x:Name="battleMenu" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="0,0,20,20"
                BorderBrush="White"
                BorderThickness="3"
                Background="#FF0000AA"
                Padding="20" 
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Command" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" FontFamily="Segoe UI"/>
                <StackPanel x:Name="battleCommandsPanel">
                    <Grid Margin="0,5" Width="180">
                        <Image x:Name="cursorAttack" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Visible"/>
                        <TextBlock x:Name="txtAttack" Text="Attack" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="180">
                        <Image x:Name="cursorMagic" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtMagic" Text="Magic" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="180">
                        <Image x:Name="cursorItem" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtItem" Text="Item" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="180">
                        <Image x:Name="cursorDefend" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtDefend" Text="Defend" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- FF4 Style In-Game Menu -->
        <Grid x:Name="inGameMenu" Visibility="Collapsed" Background="#DD000000">
            <Border BorderBrush="White" 
                    BorderThickness="4" 
                    Background="#FF0000AA"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Menu" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" FontFamily="Segoe UI"/>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorResume" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Visible"/>
                        <TextBlock x:Name="txtResume" Text="Resume" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorSave" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtSave" Text="Save Game" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorMainMenu" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtMainMenuOption" Text="Main Menu" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
