<Page
    x:Class="MysticChronicles.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml">
    
    <Grid Background="Black">
        <canvas:CanvasControl x:Name="canvas" Draw="Canvas_Draw" CreateResources="Canvas_CreateResources"/>
        
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20" Background="#CC000000" Padding="15">
            <TextBlock x:Name="txtGameState" Foreground="White" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="txtHeroStats" Foreground="LightGreen" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtMessage" Foreground="Yellow" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel x:Name="battleMenu" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" 
                    Background="#CC000000" Padding="15" Visibility="Collapsed">
            <TextBlock Text="Battle Commands" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button x:Name="btnAttack" Content="Attack" Click="BtnAttack_Click" Width="150" Margin="0,2"/>
            <Button x:Name="btnSkill" Content="Magic" Click="BtnSkill_Click" Width="150" Margin="0,2"/>
            <Button x:Name="btnItem" Content="Item" Click="BtnItem_Click" Width="150" Margin="0,2"/>
            <Button x:Name="btnDefend" Content="Defend" Click="BtnDefend_Click" Width="150" Margin="0,2"/>
        </StackPanel>

        <Grid x:Name="inGameMenu" Visibility="Collapsed" Background="#DD000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Background="#FF1a1a1a" Padding="20">
                <TextBlock Text="Menu" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <Button x:Name="btnResume" Content="Resume" Click="BtnResume_Click" FontSize="20" Margin="0,5" Padding="15,10" HorizontalAlignment="Stretch"/>
                <Button x:Name="btnSave" Content="Save Game" Click="BtnSave_Click" FontSize="20" Margin="0,5" Padding="15,10" HorizontalAlignment="Stretch"/>
                <Button x:Name="btnMainMenu" Content="Main Menu" Click="BtnMainMenu_Click" FontSize="20" Margin="0,5" Padding="15,10" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
