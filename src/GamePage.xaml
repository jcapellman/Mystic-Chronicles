<Page
    x:Class="MysticChronicles.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml">
    
    <Grid Background="Black">
        <canvas:CanvasControl x:Name="canvas" Draw="Canvas_Draw" CreateResources="Canvas_CreateResources"/>
        
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20" Background="#CC000000" Padding="15">
            <TextBlock x:Name="txtGameState" Foreground="White" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="txtHeroStats" Foreground="LightGreen" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtMessage" Foreground="Yellow" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel x:Name="battleMenu" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" 
                    Background="#CC000000" Padding="20" Visibility="Collapsed">
            <TextBlock Text="Battle Commands" Foreground="Gold" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
            <StackPanel x:Name="battleCommandsPanel">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Image x:Name="cursorAttack" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Visible"/>
                    <TextBlock x:Name="txtAttack" Text="Attack" Foreground="White" FontSize="24" FontFamily="Segoe UI"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Image x:Name="cursorMagic" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtMagic" Text="Magic" Foreground="White" FontSize="24" FontFamily="Segoe UI"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Image x:Name="cursorItem" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtItem" Text="Item" Foreground="White" FontSize="24" FontFamily="Segoe UI"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Image x:Name="cursorDefend" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtDefend" Text="Defend" Foreground="White" FontSize="24" FontFamily="Segoe UI"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid x:Name="inGameMenu" Visibility="Collapsed" Background="#DD000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Background="#FF1a1a1a" Padding="30">
                <TextBlock Text="Menu" Foreground="Gold" FontSize="36" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Grid Margin="0,10">
                    <Image x:Name="cursorResume" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Visible"/>
                    <TextBlock x:Name="txtResume" Text="Resume" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                </Grid>

                <Grid Margin="0,10">
                    <Image x:Name="cursorSave" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtSave" Text="Save Game" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                </Grid>

                <Grid Margin="0,10">
                    <Image x:Name="cursorMainMenu" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtMainMenuOption" Text="Main Menu" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
