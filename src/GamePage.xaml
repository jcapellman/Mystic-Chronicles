<Page
    x:Class="MysticChronicles.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <Grid Background="Black">
        <canvas:CanvasControl x:Name="canvas" Draw="Canvas_Draw" CreateResources="Canvas_CreateResources"/>

        <!-- FF6 Style Character Status Box - Bottom Left -->
        <Border x:Name="statusBox"
                BorderBrush="White" 
                BorderThickness="3" 
                Background="#FF0000AA"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="450"
                Margin="20,0,0,20"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Character Portrait Area (placeholder) -->
                <Border Grid.Column="0" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Background="#FF000066"
                        Width="70" 
                        Height="70"
                        VerticalAlignment="Top">
                    <TextBlock Text="ðŸ—¡ï¸" 
                               FontSize="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Character Stats -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock x:Name="txtHeroName" 
                               Text="Hero" 
                               Foreground="Yellow" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               FontFamily="Segoe UI"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Lv" Foreground="White" FontSize="14" FontFamily="Segoe UI" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtHeroLevel" Text="1" Foreground="White" FontSize="14" FontFamily="Segoe UI"/>
                    </StackPanel>

                    <!-- HP Bar -->
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="HP" Foreground="White" FontSize="12" FontFamily="Segoe UI"/>
                        <Grid Height="12" Margin="0,2,0,0">
                            <Border Background="#FF333333" CornerRadius="2"/>
                            <Border x:Name="hpBar" Background="#FF00FF00" HorizontalAlignment="Left" CornerRadius="2"/>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="2"/>
                        </Grid>
                        <TextBlock x:Name="txtHeroHP" Text="100/100" Foreground="White" FontSize="12" FontFamily="Segoe UI" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- MP Bar -->
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="MP" Foreground="White" FontSize="12" FontFamily="Segoe UI"/>
                        <Grid Height="12" Margin="0,2,0,0">
                            <Border Background="#FF333333" CornerRadius="2"/>
                            <Border x:Name="mpBar" Background="#FFFFFF00" HorizontalAlignment="Left" CornerRadius="2"/>
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="2"/>
                        </Grid>
                        <TextBlock x:Name="txtHeroMP" Text="50/50" Foreground="White" FontSize="12" FontFamily="Segoe UI" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- FF6 Style Battle Message Box - Top -->
        <Border x:Name="messageBox"
                BorderBrush="White" 
                BorderThickness="3" 
                Background="#FF0000AA"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="600"
                Margin="0,20,0,0"
                Padding="15"
                Visibility="Collapsed">
            <TextBlock x:Name="txtBattleMessage" 
                       Foreground="White" 
                       FontSize="16" 
                       TextWrapping="Wrap" 
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- FF6 Style Battle Command Box - Bottom Right -->
        <Border x:Name="battleMenu" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="0,0,20,20"
                BorderBrush="White"
                BorderThickness="3"
                Background="#FF0000AA"
                Padding="20" 
                Visibility="Collapsed">
            <StackPanel>
                <StackPanel x:Name="battleCommandsPanel">
                    <Grid Margin="0,5" Width="200">
                        <Image x:Name="cursorAttack" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Visible"/>
                        <TextBlock x:Name="txtAttack" Text="Fight" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="200">
                        <Image x:Name="cursorMagic" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtMagic" Text="Magic" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="200">
                        <Image x:Name="cursorItem" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtItem" Text="Item" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5" Width="200">
                        <Image x:Name="cursorDefend" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtDefend" Text="Defend" Foreground="White" FontSize="24" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- FF6 Style In-Game Menu -->
        <Grid x:Name="inGameMenu" Visibility="Collapsed" Background="#DD000000">
            <Border BorderBrush="White" 
                    BorderThickness="4" 
                    Background="#FF0000AA"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Menu" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" FontFamily="Segoe UI"/>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorResume" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Visible"/>
                        <TextBlock x:Name="txtResume" Text="Resume" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorSave" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtSave" Text="Save Game" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Image x:Name="cursorMainMenu" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtMainMenuOption" Text="Main Menu" FontSize="28" FontFamily="Segoe UI" Foreground="White" Margin="50,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
