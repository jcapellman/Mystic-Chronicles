<Page
    x:Class="MysticChronicles.CharacterCreationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Background="#FF0000AA">
        <!-- Final Fantasy style blue background -->
        
        <!-- Main content box -->
        <Border BorderBrush="White" 
                BorderThickness="4" 
                Background="#FF0000AA"
                Width="600" 
                Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Margin="40">
                <TextBlock Text="Name thy hero" 
                           FontSize="32" 
                           Foreground="White"
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>
                
                <!-- Name input box with white border -->
                <Border BorderBrush="White" 
                        BorderThickness="3" 
                        Background="#FF000066"
                        Padding="10"
                        Margin="0,0,0,40">
                    <TextBox x:Name="txtHeroName" 
                             Text="Snake"
                             FontSize="28"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxLength="20"
                             TextAlignment="Center"
                             FontFamily="Segoe UI"/>
                </Border>
                
                <!-- Buttons area -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Spacing="40">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="cursorConfirm" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Visible"/>
                        <TextBlock x:Name="txtConfirm" Text="Confirm" FontSize="24" Foreground="White" FontFamily="Segoe UI"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="cursorCancel" Source="Assets/Cursor.png" Width="24" Height="24" Margin="0,0,10,0" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtCancel" Text="Cancel" FontSize="24" Foreground="White" FontFamily="Segoe UI"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
