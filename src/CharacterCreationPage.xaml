<gore:BasePage
    x:Class="MysticChronicles.CharacterCreationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gore="using:GORE.Core.Pages"
    xmlns:local="using:MysticChronicles">
    
    <Grid Background="#FF0000AA">
        <!-- Final Fantasy style blue background -->

        <!-- Main content box -->
        <Border BorderBrush="White" 
                BorderThickness="4" 
                Background="#FF0000AA"
                Width="700" 
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Margin="50">
                <TextBlock Text="Name thy hero" 
                           FontSize="32" 
                           Foreground="White"
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Name input box with white border -->
                <Border BorderBrush="White" 
                        BorderThickness="3" 
                        Background="#FF000066"
                        Padding="10"
                        Margin="0,0,0,50">
                    <TextBox x:Name="txtHeroName" 
                             Text="Snake"
                             FontSize="28"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxLength="20"
                             TextAlignment="Center"
                             FontFamily="Segoe UI"/>
                </Border>

                <!-- Buttons area -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Grid Width="200" Margin="0,0,40,0">
                        <Image x:Name="cursorConfirm" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Visible"/>
                        <TextBlock x:Name="txtConfirm" Text="Confirm" FontSize="24" Foreground="White" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Width="200">
                        <Image x:Name="cursorCancel" Source="Assets/Cursor.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"/>
                        <TextBlock x:Name="txtCancel" Text="Cancel" FontSize="24" Foreground="White" FontFamily="Segoe UI" Margin="40,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</gore:BasePage>
