<gore:BasePage
    x:Class="MysticChronicles.MainMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:gore="using:GORE.Core.Pages"
    xmlns:local="using:MysticChronicles">

    <Grid>
        <!-- Background Image -->
        <Image Source="Assets/MainMenu.png" Stretch="UniformToFill"/>

        <!-- Animated Clouds/Mist Layer -->
        <canvas:CanvasControl x:Name="animationCanvas" 
                             Draw="AnimationCanvas_Draw" 
                             ClearColor="Transparent"/>

        <!-- Menu UI on top -->
        <Grid>
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="0,150,0,0">
                <Grid Width="250" Margin="0,15">
                    <Image x:Name="cursorNewGame" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Visible"/>
                    <TextBlock x:Name="txtNewGame" Text="New Game" 
                               FontSize="32" 
                               FontFamily="Segoe UI" 
                               Foreground="White"
                               FontWeight="Normal"
                               Margin="50,0,0,0"
                               HorizontalAlignment="Left"/>
                </Grid>

                <Grid Width="250" Margin="0,15">
                    <Image x:Name="cursorLoadGame" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtLoadGame" Text="Load Game" 
                               FontSize="32" 
                               FontFamily="Segoe UI" 
                               Foreground="White"
                               FontWeight="Normal"
                               Margin="50,0,0,0"
                               HorizontalAlignment="Left"/>
                </Grid>

                <Grid Width="250" Margin="0,15">
                    <Image x:Name="cursorExit" Source="Assets/Cursor.png" Width="32" Height="32" HorizontalAlignment="Left" Visibility="Collapsed"/>
                    <TextBlock x:Name="txtExit" Text="Exit" 
                               FontSize="32" 
                               FontFamily="Segoe UI" 
                               Foreground="White"
                               FontWeight="Normal"
                               Margin="50,0,0,0"
                               HorizontalAlignment="Left"/>
                </Grid>
            </StackPanel>

            <TextBlock Text="Â© 2024 Mystic Chronicles" 
                       FontSize="14"
                       Foreground="LightGray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,20"/>
        </Grid>
    </Grid>
</gore:BasePage>
